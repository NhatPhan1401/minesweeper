<div class="container mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6 text-center">Welcome to Minesweeper</h1>

  <%= form_with model: @board, local: true, class: "space-y-4" do |form| %>
    <div class="flex flex-col">
      <%= form.label :email, class: "block text-sm/6 font-medium text-gray-900" %>
      <%= form.text_field :email, class: "border border-gray-300 rounded p-2" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :name, "Board Name", class: "block text-sm/6 font-medium text-gray-900" %>
      <%= form.text_field :name, class: "border border-gray-300 rounded p-2" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :width, "Board Width", class: "block text-sm/6 font-medium text-gray-900" %>
      <%= form.number_field :width, class: "border border-gray-300 rounded p-2" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :height, "Board Height", class: "block text-sm/6 font-medium text-gray-900" %>
      <%= form.number_field :height, class: "border border-gray-300 rounded p-2" %>
    </div>

    <div class="flex flex-col">
      <%= form.label :mine_count, "Number of Mines", class: "block text-sm/6 font-medium text-gray-900" %>
      <%= form.number_field :mine_count, class: "border border-gray-300 rounded p-2" %>
    </div>

    <%= form.submit "Generate Board", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 cursor-pointer" %>
  <% end %>

  <h2 class="text-2xl font-bold mt-8">Recently Generated Boards</h2>
  <ul class="space-y-4 mt-4">
    <% @recent_boards.each do |board| %>
      <li class="border-b pb-2">
        <strong>
          <%= link_to board.name, board_path(board), class: "text-blue-500 hover:underline" %>
        </strong>
        - Size: <%= board.width %> x <%= board.height %> 
        - Mines: <%= board.mines.count %> 
        - Created by: <%= board.email %> 
        on <%= board.created_at.strftime("%b %d, %Y %H:%M") %>
      </li>
    <% end %>
  </ul>

  <%= link_to "View All Generated Boards", boards_path, class: "block mt-6 text-blue-500 hover:underline" %>
</div>
